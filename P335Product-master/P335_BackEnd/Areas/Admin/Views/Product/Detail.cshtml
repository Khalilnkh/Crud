@model ProductIndexVM

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Base Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/featured/@Model.Product.ProductImages.FirstOrDefault().Image.Url" />
        </dd>
        <dt class="col-sm-2">
            Slider Images
        </dt>
        <dd class="col-sm-10">
            @foreach (var image in Model.Product.ProductImages)
            {
            <img src="~/img/featured/@image.Image.Url"/>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
